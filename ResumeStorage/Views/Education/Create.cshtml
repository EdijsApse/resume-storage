@model EducationListViewModel

@{
    ViewData["Title"] = "Update List Of Educations";
}

<div cllas="page">
    <h1 class="page-title">Update List Of Educations</h1>
    <div class="page-content">
        <form method="post" action="/Resume/@Model.ResumeId/Education/Create">
            <div class="form-items-list">
            @for (var i = 0; i < Model.ListOfEducations.Count; i++)
            {
                <div class="single-form-item">
                    <button class="btn btn-danger btn-sm ms-auto d-block remove-button" type="button">Delete</button>
                    <input asp-for="ListOfEducations[i].Id" hidden class="item-id" />

                    <input asp-for="ListOfEducations[i].BasicProfileId" hidden />

                    <span asp-validation-for="ListOfEducations[i].BasicProfileId" class="text-danger"></span>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="ListOfEducations[i].NameOfSchool" class="form-label"></label>
                            <input asp-for="ListOfEducations[i].NameOfSchool" class="form-control" />
                            <span asp-validation-for="ListOfEducations[i].NameOfSchool" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="ListOfEducations[i].FieldOfStudy" class="form-label"></label>
                            <input asp-for="ListOfEducations[i].FieldOfStudy" class="form-control" />
                            <span asp-validation-for="ListOfEducations[i].FieldOfStudy" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="ListOfEducations[i].Degree" class="form-label"></label>
                            <input asp-for="ListOfEducations[i].Degree" class="form-control" />
                            <span asp-validation-for="ListOfEducations[i].Degree" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="ListOfEducations[i].DateFrom" class="form-label"></label>
                            <input asp-for="ListOfEducations[i].DateFrom" class="form-control" type="date" />
                            <span asp-validation-for="ListOfEducations[i].DateFrom" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="ListOfEducations[i].DateTo" class="form-label"></label>
                            <input asp-for="ListOfEducations[i].DateTo" class="form-control" type="date" />
                            <span asp-validation-for="ListOfEducations[i].DateTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }
            </div>

            <div class="my-3">
                <button id="clone-item" type="button" class="btn btn-success">Add Item</button>
            </div>

            <button class="btn btn-primary">Save</button>
        </form>
    </div>

    <partial name="_Cloneable" model="new EducationViewModel { BasicProfileId = Model.ResumeId }" />
</div>

@section Scripts
{
    <script>
        const DELETE_ENDPOINT = "/Resume/@Model.ResumeId/Education/Delete";
        const FIELD_NAME = "ListOfEducations";
    </script>
    <script src="~/js/AddItem.js" asp-append-version="true"></script>
    <script src="~/js/RemoveItem.js" asp-append-version="true"></script>
}